<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Add your head content here -->
  </head>

  <style>
    /* Add your styles here */

    body {
      width: 100%;
      height: 100%;
      background: #e6e6e6;
      margin: 0;
      padding: 0 5px; /* Adjust the general padding */
      box-sizing: border-box;
      text-align: left;
      font-weight: normal;
    }

    table {
      background-color: #fff;
      padding: 0;
      border-collapse: collapse;
      margin: 50px auto;
      width: 100%;
    }

    table th,
    table td {
      white-space: nowrap;
      border: 1px solid #000;
      padding: 4px; /* Adjust the cell padding */
      font-size: 10px; /* Adjust the font size */
    }

    .table-header {
      font-size: 16px; /* Adjust the font size */
      font-weight: 600;
      white-space: nowrap;
    }

    .date-time {
      font-size: 10px; /* Adjust the font size */
      font-weight: 500;
      text-align: end;
      vertical-align: middle;
    }

    img {
      width: 100%;
      height: auto;
      max-width: 150px;
      object-fit: contain;
    }
  </style>

  <body>
    <table>
      <tbody>
        <tr>
          <td>
            <table>
              <tbody>
                <tr>
                  <td class="table-header">Customer List</td>
                  <td class="date-time">
                    <b>Date:</b> <%= new Date().toLocaleDateString() %>
                  </td>
                  <td class="date-time">
                    <b>Time:</b> <%= new Date().toLocaleTimeString() %>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>

    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Company</th>
          <th>Phone</th>
          <th>Siret</th>
          <th>Employees</th>
          <th>Country</th>
          <th>City</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(item, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.first_name %> <%= item.last_name %></td>
            <td><%= item.email %></td>
            <td><%= item.status %></td>
<td><%= item.company_name %></td>
            <td><%= item.phone_number %></td>
            <td><%= item.siret_number %></td>
            <td><%= item.totalEmployees %></td>
            <td><%= item.country %></td>
            <td><%= item.city %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Include Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

